{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "csch",
  "version": "1.0.20",
  "identifier": "com.chengshangcehua.tools",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "呈尚策划工具中心",
        "width": 1480,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 750,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light",
        "devtools": true,
        "additionalBrowserArgs": "--enable-features=VaapiVideoDecoder --disable-features=VizDisplayCompositor"
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: http://localhost:3000 ipc: https://ipc.localhost; img-src 'self' asset: data: http: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost ws://localhost:3000 http://localhost:3000 https: tauri:; frame-src 'self' https: http: data:;",
      "capabilities": ["main-capability"]
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://www.yujinkeji.asia/api/releases/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IHJzdCBzaWduaW5nIGNyeXB0b2dyYXBoaWNhbGx5IHNlY3VyZSBzaWduYXR1cmVzIGFyZSBhdmFpbGFibGUgZm9yIGluc3RhbGxpbmdcblJXU0JBSG9yOEJlSkcxZ3pPdmJTZ2VoZTE2amQ2"
    },
    "http": {
      "scope": ["https://restapi.amap.com/**"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "呈尚策划",
    "category": "Productivity",
    "shortDescription": "呈尚策划专业工具集合",
    "longDescription": "集成19个专业工具的桌面应用，服务于运营、美工、销售、人事、客服等不同岗位的工作需求"
  }
}
